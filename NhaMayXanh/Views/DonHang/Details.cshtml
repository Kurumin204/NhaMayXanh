@model WebFigure.ModelsView.XemDonHang
@{
    var total = Model.ChiTietDonHang.Sum(x => x.TotalMoney).Value.ToString("#,##0");
}
<h3>Thông tin đơn hàng: #@Model.DonHang.OrderId</h3>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Ngày đặt hàng</th>
                <th>Trạng thái đơn hàng</th>
                <th>Thành tiền</th>
            </tr>

            @foreach (var item in Model.ChiTietDonHang)
            {
                <tr>
                    
                    <td>@item.Product.ProductName</td>
                    <td>@item.Amount</td>
                    <td>@item.Product.Price</td>
                     <td>@Model.DonHang.OrderDate</td>
                     <td>@Model.DonHang.TransactStatus.Status</td>
                    <td>@item.TotalMoney.Value.ToString("#,##0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
</div>
