@if (Model.news != null && Model.news.Count() > 0)
{
    <div class="latest-blog-area">
        <div class="container container-default custom-area">
            <div class="row">
                <div class="col-lg-5 m-auto text-center col-custom">
                    <div class="section-content">
                        <h2 class="title-1 text-uppercase">Blog Mới Nhất</h2>
                        <div class="desc-content">
                            <p>Nếu Bạn Muốn Biết Nhiều Hơn Về Đồ Điện Tử Của Nhà Máy Xanh Hãy Để Ý Tới Blog Của Chúng Tôi</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-custom">
                    <div class="obrien-slider" data-slick-options='{
                                    "slidesToShow": 3,
                                    "slidesToScroll": 1,
                                    "infinite": true,
                                    "arrows": false,
                                    "dots": false
                                    }' data-slick-responsive='[
                                    {"breakpoint": 1200, "settings": {
                                    "slidesToShow": 2
                                    }},
                                    {"breakpoint": 992, "settings": {
                                    "slidesToShow": 2
                                    }},
                                    {"breakpoint": 768, "settings": {
                                    "slidesToShow": 1
                                    }},
                                    {"breakpoint": 576, "settings": {
                                    "slidesToShow": 1
                                    }}
                                    ]'>


                        @foreach (var item in Model.news)
                        {
                            string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                            <div class="col-lg-4 col-md-6 col-custom mb-4">
                                <div class="single-blog">
                                    <div class="single-blog-thumb">
                                        <a href="@url">

                                            <img src="~/images/news/@item.Thumb" alt="@item.Title" />
                                        </a>
                                    </div>
                                    <div class="single-blog-content position-relative">
                                        <div class="post-date text-center border d-flex flex-column position-absolute" style="width:100px; margin-left:-20px;">
                                            <div>@item.CreatedDate.Value.ToShortDateString()</div>
                                        </div>
                                        <div class="post-meta" style="margin-left:20px;">
                                            <span class="author">Tác giả: @item.Author</span>
                                        </div>
                                        <h2 class="post-title" style="margin-left:20px;">
                                            <a href="@url">@item.Title</a>
                                        </h2>
                                        <div style="margin-left:20px;">
                                            <p class="desc-content">@Html.Raw(item.Scontents)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
}

